ruleflow-group "bugbugfavoritesdeaction1"
    when
    then
    ibzfavoritesservice.create(bugbugfavoritesibzfavorites);
    update(bugbugfavoritesibzfavorites);//更新fact中变量值
    update(bugbugfavoritesdefault);//更新fact中变量值
    end

