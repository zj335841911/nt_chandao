no-loop

//逻辑处理节点[设置收藏参数]
rule "prepareparam1"
ruleflow-group "bugbugfavoritesprepareparam1"
    when
    then
    bugbugfavoritesibzfavorites.set("objectid",bugbugfavoritesdefault.get("id"));
    bugbugfavoritesibzfavorites.set("account",curuser.getSessionParams().get("srfloginname"));
